<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <View android:id="@+id/color_band"
          android:layout_width="8dp"
          android:layout_height="match_parent"
          android:layout_weight="0"
          android:paddingRight="4dp"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:orientation="horizontal"
                  android:paddingTop="4dp"
                  android:paddingBottom="4dp"
                  android:paddingRight="4dp">
        <TextView android:id="@+id/ecode"
                  android:layout_width="72dp"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:layout_gravity="center"
                  android:textAppearance="@android:style/TextAppearance.Large"/>
        <LinearLayout android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:paddingLeft="4dp"
                      android:paddingRight="4dp"
                      android:orientation="vertical">
            <!-- text fields -->
            <TextView android:id="@+id/name"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:lines="2"
                      android:textAppearance="@android:style/TextAppearance.Medium"/>
            <TextView android:id="@+id/purpose"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="20dp"
                      android:layout_height="wrap_content"
                      android:gravity="center_vertical"
                      android:layout_weight="0"
                      android:orientation="vertical">
            <ImageView android:id="@+id/allergy"
                       android:src="@drawable/allergic"
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:scaleType="centerInside"/>
            <ImageView android:id="@+id/child"
                       android:src="@drawable/child"
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:scaleType="centerInside"/>
            <ImageView android:id="@+id/vegan"
                       android:src="@drawable/vegan"
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:scaleType="centerInside"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>